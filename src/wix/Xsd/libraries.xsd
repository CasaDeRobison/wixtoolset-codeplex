<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://wixtoolset.org/schemas/wixlib"
              xmlns="http://wixtoolset.org/schemas/wixlib"
          xmlns:loc="http://wixtoolset.org/schemas/wxl"
         xmlns:objs="http://wixtoolset.org/schemas/wixobj">
    <xs:annotation>
        <xs:documentation>
            Schema for describing WiX Library files (.wixlib).
        </xs:documentation>
    </xs:annotation>

    <xs:import namespace="http://wixtoolset.org/schemas/wxl" schemaLocation="wixloc.xsd" />
    <xs:import namespace="http://wixtoolset.org/schemas/wixobj" schemaLocation="objects.xsd" />

    <xs:element name="wixLibrary">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="loc:WixLocalization" minOccurs="0" maxOccurs="unbounded" />
                <xs:element ref="objs:section" minOccurs="0" maxOccurs="unbounded" />
            </xs:sequence>

            <xs:attribute name="version" type="xs:string" use="required">
                <xs:annotation>
                    <xs:documentation>Version of WiX used to create this library file</xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
</xs:schema>
