<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <ComponentGroup Id="LibComponents">
            <ComponentGroupRef Id="LibX86Components" />
            <ComponentGroupRef Id="LibX64Components" />
        </ComponentGroup>
    </Fragment>

    <Fragment>
        <ComponentGroup Id="LibX86Components" Directory="SdkX86LibFolder">
            <Component>
                <File Name="dutil.lib" Source="!(bindpath.x86)\dutil_$(var.VisualStudioTargetVersion).lib"/>
            </Component>
            <Component>
                <File Name="wcautil.lib" Source="!(bindpath.x86)\wcautil_$(var.VisualStudioTargetVersion).lib"/>
            </Component>

            <Component>
                <File Name="balutil.lib" Source="!(bindpath.x86)\balutil_$(var.VisualStudioTargetVersion).lib"/>
            </Component>
            <Component>
                <File Name="deputil.lib" Source="!(bindpath.x86)\deputil_$(var.VisualStudioTargetVersion).lib"/>
            </Component>
        </ComponentGroup>
    </Fragment>

    <Fragment>
        <ComponentGroup Id="LibX64Components" Directory="SdkX64LibFolder">
            <Component>
                <File Id="dutil_x64.lib" Source="!(bindpath.x64)\dutil_$(var.VisualStudioTargetVersion).lib"/>
            </Component>
            <Component>
                <File Id="wcautil_x64.lib" Source="!(bindpath.x64)\wcautil_$(var.VisualStudioTargetVersion).lib"/>
            </Component>
        </ComponentGroup>
    </Fragment>
</Wix>
